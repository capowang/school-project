<div class="container">
	<div class="about-card d-flex justify-content-around mt-3 pt-5 pl-5 pr-5 pb-5 mb-5">
		<div>
			<h1>
			<% if I18n.locale == I18n.default_locale %>
				<%= @about.title %>
			<% else %>
			 	<%= @about.title_cn %>
			<% end %>
			</h1>
			<p>
			<% if I18n.locale == I18n.default_locale %>
				<%= @about.description %>
			<% else %>
			 	<%= @about.description_cn %>
			<% end %>
			</p>
		</div>
		<% if @about.photo1.attached? %>
  			<%= cl_image_tag @about.photo1.key, height: 300, width: 400, crop: :fill %>
 		<% end %>
	</div>
	<div class="about-carousel-box">
		 <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
		  <ol class="carousel-indicators">
		    <% if @about.photo1.attached? %>
		        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
		    <% end %>
		    <% if @about.photo2.attached? %>
		      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
		    <% end %>
		    <% if @about.photo3.attached? %>
		      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
		    <% end %>
		    <% if @about.photo4.attached? %>
		      <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
		    <% end %>
		   </ol>
		  <div class="carousel-inner">
		    <% if @about.photo1.attached? %>
		      <div class="carousel-item active">
		        <%= cl_image_tag @about.photo1.key, class:"d-block w-100 carousel-fix" %>
		      </div>
		    <% end %>
		    <% if @about.photo2.attached? %>
		      <div class="carousel-item">
		        <%= cl_image_tag @about.photo2.key, class:"d-block w-100 carousel-fix" %>
		      </div>
		    <% end %>
		    <% if @about.photo3.attached? %>
		      <div class="carousel-item">
		        <%= cl_image_tag @about.photo3.key, class:"d-block w-100 carousel-fix" %>
		      </div>
		    <% end %>
		    <% if @about.photo4.attached? %>
		      <div class="carousel-item">
		        <%= cl_image_tag @about.photo4.key, class:"d-block w-100 carousel-fix" %>
		      </div>
		    <% end %>
		  </div>

		  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
		    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
		    <span class="sr-only">Previous</span>
		  </a>
		  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
		    <span class="carousel-control-next-icon" aria-hidden="true"></span>
		    <span class="sr-only">Next</span>
		  </a>
		</div> 
	</div>
</div>
