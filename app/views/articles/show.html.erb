<%= link_to "Back", root_path %>
<h1>
<% if I18n.locale == I18n.default_locale %>
	<%= @article.title %>
<% else %>
 	<%= @article.title_cn %>
<% end %>
</h1>
<p>
<% if I18n.locale == I18n.default_locale %>
	<%= @article.content %>
<% else %>
 	<%= @article.content_cn %>
<% end %>
</p>

<% @article.photos.each do |photo| %>
  <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
<% end %>
