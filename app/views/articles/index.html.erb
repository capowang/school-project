<h1>
<%= t("hello") %>
<%= t("goodbye") %>
</h1>
<ol>
	<% @articles.each do |article| %>
		<li>
			<% if I18n.locale == I18n.default_locale %>
        		<h2><%= link_to article.title, article_path(article) %></h2>
        		<p><%= article.title%></p>
    		<% else %>
				<h2><%= link_to article.title_cn, article_path(article) %></h2>
				<p><%= article.title_cn%></p>
    		<% end%>
			
	<% end %>
</ol>
