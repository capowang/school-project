<h1>
<%= t("hello") %>
</h1>
<ol>
	<% @articles.each do |article| %>
		<li>
			<% if I18n.locale == I18n.default_locale %>
        		<h2><%= link_to article.title, article_path(article) %></h2>
        		<p><%= article.title%></p>
    		<% else %>
				<h2><%= link_to article.title_cn, article_path(article) %></h2>
				<p><%= article.title_cn%></p>
    		<% end%>
    		<% if article.photo1.attached? %>
  				<%= cl_image_tag article.photo1.key, height: 300, width: 400, crop: :fill %>
 			<% end %>
			
	<% end %>
</ol>
